        for auth in "${auth_array[@]}"; do
            username=$(echo ${auth} | cut -d: -f1)
            password=$(echo ${auth} | cut -d: -f2)
            echo "${username}:$(openssl passwd -apr1 "${password}")" >> /etc/htpasswd.d/htpasswd.h5ai
