        username=$(cat /root/.admin.info | cut -d: -f1)
        _configNginx
    else
        _configNginx
        if [[ -n "${subfolder}" ]]; then
            sed -i -r 's/(auth_basic|auth_basic_user_file)/#\1/g' /etc/nginx/apps/h5ai.conf
