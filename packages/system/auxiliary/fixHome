#################################################################################
################################################################################
# HELP FUNCTIONS
################################################################################
_norm=$(tput sgr0)
_red=$(tput setaf 1)
_green=$(tput setaf 2)
_tan=$(tput setaf 3)
_cyan=$(tput setaf 6)
OUTTO=/srv/dashboard/db/output.log
if [[ -z $1 ]]; then
	username=$1
else
	username=$(cat /root/.admin.info | cut -d: -f1)
fi

function _execute() {
	($1 >>"${OUTTO}" 2>&1)
}
function _print() {
	printf "${_norm}%s${_norm}\n" "$@"
	printf "%s\n" "$@" >>"${OUTTO}"
}
function _info() {
	printf "${_cyan}➜ %s${_norm}\n" "$@"
	printf ">> Info: %s\n" "$@" >>"${OUTTO}"
}
function _success() {
	printf "${_green}✓ %s${_norm}\n" "$@"
	printf ">> Success: %s\n" "$@" >>"${OUTTO}"
}
function _warning() {
	printf "${_tan}⚠ %s${_norm}\n" "$@"
	printf ">> Warning: %s\n" "$@" >>"${OUTTO}"
}
function _error() {
	printf "${_red}✗ %s${_norm}\n" "$@"
	printf ">> Error: %s\n" "$@" >>"${OUTTO}"
}

################################################################################
# MAIN FUNCTIONS
################################################################################
function _permission() {
	_info "Adjusting directory and file permissions for ${username}..."
	find /home/${username} -type d -name .bin -prune -o -type d -name .ssh -prune -o -type d -exec chmod 755 {} \;
	chown -R ${username}:${username} /home/${username}
	_success "Directory and file permissions for ${username} adjusted."
}

################################################################################
# FUNCTION CALLS
_permission
