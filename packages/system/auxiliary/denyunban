#################################################################################
#################################################################################
# CORE VARIABLE
#################################################################################
HOST=$1
################################################################################
# HELP FUNCTIONS
################################################################################
_norm=$(tput sgr0)
_red=$(tput setaf 1)
_green=$(tput setaf 2)
_tan=$(tput setaf 3)
_cyan=$(tput setaf 6)
OUTTO=/srv/dashboard/db/output.log

function _execute() {
	($1 >>"${OUTTO}" 2>&1)
}
function _print() {
	printf "${_norm}%s${_norm}\n" "$@"
	printf "%s\n" "$@" >>"${OUTTO}"
}
function _info() {
	printf "${_cyan}➜ %s${_norm}\n" "$@"
	printf ">> Info: %s\n" "$@" >>"${OUTTO}"
}
function _success() {
	printf "${_green}✓ %s${_norm}\n" "$@"
	printf ">> Success: %s\n" "$@" >>"${OUTTO}"
}
function _warning() {
	printf "${_tan}⚠ %s${_norm}\n" "$@"
	printf ">> Warning: %s\n" "$@" >>"${OUTTO}"
}
function _error() {
	printf "${_red}✗ %s${_norm}\n" "$@"
	printf ">> Error: %s\n" "$@" >>"${OUTTO}"
}

################################################################################
# MAIN FUNCTIONS
################################################################################
function _unban() {
	_info "Unbanning ..."
	_execute "systemctl stop denyhosts"
	if [[ -z "${HOST}" ]]; then
		echo '' >/etc/hosts.deny
		echo '' >/var/lib/denyhosts/hosts
		echo '' >/var/lib/denyhosts/hosts-restricted
		echo '' >/var/lib/denyhosts/hosts-root
		echo '' >/var/lib/denyhosts/hosts-valid
		echo '' >/var/lib/denyhosts/users-hosts
	else
		echo '
/etc/hosts.deny
/var/lib/denyhosts/hosts
/var/lib/denyhosts/hosts-restricted
/var/lib/denyhosts/hosts-root
/var/lib/denyhosts/hosts-valid
/var/lib/denyhosts/users-hosts
' | grep -v "^$" | xargs sed -i "/${HOST}/d"
	fi
	_execute "systemctl start denyhosts"
	_success "Denyhosts list cleaned !"
}
################################################################################
# EXCUTE
################################################################################
_unban
