#################################################################################
################################################################################
# HELP FUNCTIONS
################################################################################
_norm=$(tput sgr0)
_red=$(tput setaf 1)
_green=$(tput setaf 2)
_tan=$(tput setaf 3)
_cyan=$(tput setaf 6)
OUTTO=/srv/dashboard/db/output.log

function _execute() {
	($1 >>"${OUTTO}" 2>&1)
}
function _print() {
	printf "${_norm}%s${_norm}\n" "$@"
	printf "%s\n" "$@" >>"${OUTTO}"
}
function _info() {
	printf "${_cyan}➜ %s${_norm}\n" "$@"
	printf ">> Info: %s\n" "$@" >>"${OUTTO}"
}
function _success() {
	printf "${_green}✓ %s${_norm}\n" "$@"
	printf ">> Success: %s\n" "$@" >>"${OUTTO}"
}
function _warning() {
	printf "${_tan}⚠ %s${_norm}\n" "$@"
	printf ">> Warning: %s\n" "$@" >>"${OUTTO}"
}
function _error() {
	printf "${_red}✗ %s${_norm}\n" "$@"
	printf ">> Error: %s\n" "$@" >>"${OUTTO}"
}

################################################################################
# MAIN FUNCTIONS
################################################################################
function _unban() {
	_info "Unbanning ..."
	fail2banjails=$(fail2ban-client status | grep "Jail list" | cut -f2- | sed 's/,//g')
	for jails in $fail2banjails; do
		fail2ban-client set $jails unbanip $option >/dev/null 2>&1
	done
	_success "Banned list cleaned !"
}
################################################################################
# EXCUTE
################################################################################
_unban
